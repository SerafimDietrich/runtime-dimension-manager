	"name": "Runtime Dimension Manager",
	"description": "Manage dimensions at runtime!",
	"authors": [
		"Serafim Dietrich"
	],
	"contact": {
		"homepage": "https://github.com/SerafimDietrich",
		"sources": "https://github.com/SerafimDietrich/runtime-dimension-manager",
